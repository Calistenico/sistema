{
  "manifest_version": 3,
  "name": "AnythingLLM",
  "version": "1.0.0",
  "description": "Save selected text to AnythingLLM",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "notifications",
    "alarms"
  ],
  "host_permissions": ["http://localhost:3001/"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
