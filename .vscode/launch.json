  "version": "0.2.0",
  "configurations": [
    {
      "name": "Server debug",
      "request": "launch",
      "cwd": "${workspaceFolder}/server",
      "env": {
        "NODE_ENV": "development"
      },
      "runtimeArgs": ["index.js"],
      // not using yarn/nodemon because it doesn't work with breakpoints
      // "runtimeExecutable": "yarn",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },
    {
      "name": "Frontend debug",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": ["dev:frontend"],
      "runtimeExecutable": "yarn",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },
    {
      "name": "Python Debugger: Collector watch",
      "type": "python",
      "cwd": "${workspaceFolder}/collector",
      "request": "launch",
      "program": "${workspaceFolder}/collector/watch.py",
      "console": "integratedTerminal"
    },
    {
      "name": "Python Debugger: Collector run",
      "type": "python",

      "cwd": "${workspaceFolder}/collector",
      "request": "launch",
      "env": {
        "FLASK_ENV": "development",
        "FLASK_APP": "wsgi.py"
      },
      "program": "${workspaceFolder}/collector/v-env/bin/gunicorn",
      "args": [
        "--timeout",
        "300",
        "--workers",
        "1",
        "--bind",
        "0.0.0.0:8888",
        "wsgi:api"
      ],
      "console": "integratedTerminal"
    },
    // {
    //   "name": "Launch Vite",
    //   "program": "${workspaceFolder}/frontend/node_modules/.bin/vite",
    //   "args": ["--debug", "--host=0.0.0.0"],
    //   "request": "launch",
    //   "cwd": "${workspaceFolder}/frontend",
    //   "env": {
    //     "VITE_API_BASE": "http://localhost:3001/api"
    //   },
    //   "type": "node"
    // },
    {
      "name": "Launch Edge",
      "request": "launch",
      "type": "msedge",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    }
  ]
}
